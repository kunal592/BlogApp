# =================================
# Application Configuration
# =================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
APP_NAME="Knowledge Blog Platform"
FRONTEND_URL=http://localhost:3001

# =================================
# Database Configuration
# =================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/blogapp?schema=public"

# =================================
# Authentication Configuration
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=604800
JWT_REFRESH_EXPIRES_IN=2592000
BCRYPT_SALT_ROUNDS=12
AUTH_COOKIE_NAME=access_token

# =================================
# AI Configuration (Gemini)
# =================================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro
GEMINI_EMBEDDING_MODEL=embedding-001

# =================================
# Payment Configuration (Razorpay)
# =================================
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# =================================
# Feature Flags
# =================================
# AI Features
FEATURE_AI_SUMMARIZATION=true
FEATURE_AI_SEO=true
FEATURE_AI_ASK=true
FEATURE_AI_EMBEDDINGS=true

# User Features
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_SOCIAL_LOGIN=false

# Blog Features
FEATURE_BLOG_COMMENTS=true
FEATURE_BLOG_LIKES=true
FEATURE_BLOG_BOOKMARKS=true
FEATURE_EXCLUSIVE_BLOGS=false

# Payment Features
FEATURE_TOKEN_PURCHASE=false
FEATURE_CREATOR_PAYOUTS=false

# Platform Features
FEATURE_EXPLORE=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true

# Maintenance Mode
MAINTENANCE_MODE=false

# =================================
# Rate Limiting
# =================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100
